
@{
    ViewData["Title"] = "_SearchBar";
}

<div class="shadow rounded">
    <div class="p-2">
        <form autocomplete="off">
            <div class="mb-3 row">
                <div class="col-10 text-center ui-widget ">
                    <input type="text" id="tags" placeholder="Search Recipe" class="form-control" name="recipe" />
                </div>
                <div class="col-2 p-1">
                    <button type="submit" class="btn btn-sm btn-success p-2"> Search </button>
                </div>
            </div>
        </form>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"> </script> 
<script>
    $(function () { //auto suggestion
        var availableTags = [
            "Sushi", "Fries","Chicken", "Kebab","Pineapple","Blackcurrent","Cauliflower",
            "Watermelon", "Sausage","Pizza", "Cake", "Chocolate","Ice cream","Onion",
            "JPeas"," Dill","Cherry","Grape", "Pudding","Crab", "Ribs","Turkey","Fish",
            " Plum" ,"Papaya","Coconut"
                  
        ];
        $("#tags").autocomplete({
            source: availableTags,
            minLength: 2     //At least give 3 characters to show the matching results for the search
        });
    });
</script>

