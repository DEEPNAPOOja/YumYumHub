<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YumYumHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YumYumHub.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" />
</head>
<body>
    <header class="position-sticky top-0" >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-pink fw-bold" asp-area="" asp-controller="Home" asp-action="Index">YumYumHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Recipe" asp-action="Index">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="">Menu</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-white">
        <div class="container mt-2">
            <div class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>YumYumHub</h4>
                    <p>Health-conscious, safe, and speedy </p>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>Contact Us</h4>
                    <div class="mt-3 mb-2">
                        <span> <i class="fa-brands fa-instagram fs-5"></i></span>
                        <span class="fs-6 mx-1"> Instagram </span>
                    </div>
                    <div class="mb-1 mb-2">
                        <span> <i class="fa-brands fa-whatsapp fs-5"></i> </span>
                        <span class="fs-6 mx-1"> Whatsapp </span>
                    </div>
                    <div class="mb-1 mb-2">
                        <span> <i class="fa-brands fa-facebook fs-5"></i>  </span>
                        <span class="fs-6 mx-1"> facebook </span>
                    </div>
                    <div class="mb-1 mb-2">
                        <span> <i class="fa-regular fa-envelope fs-5"></i> </span>
                        <span class="fs-6 mx-1"> mail </span>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4> Address</h4>
                    <pre> 156,Boralasgamuwa,Colombo</pre>
                </div>
            </div>
            <div>
                <h6 class="text-center"> Powered By Fokify </h6>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.min.js"> </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
